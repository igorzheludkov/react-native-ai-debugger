{
  "name": "react-native-ai-debugger",
  "version": "1.0.11",
  "description": "MCP server for AI-powered React Native debugging - logs, REPL, state inspection",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "react-native-ai-debugger": "./build/index.js"
  },
  "scripts": {
    "build": "tsc && chmod 755 build/index.js && chmod 755 build/httpServerStandalone.js",
    "start": "node build/index.js",
    "dev": "nodemon --watch src --ext ts --exec 'npm run build && node build/index.js'",
    "http-server": "node build/httpServerStandalone.js"
  },
  "keywords": [
    "mcp",
    "react-native",
    "metro",
    "debugging",
    "ai",
    "claude",
    "expo"
  ],
  "author": "Ihor Zheludkov <500griven@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/igorzheludkov/react-native-ai-debugger.git"
  },
  "homepage": "https://github.com/igorzheludkov/react-native-ai-debugger#readme",
  "bugs": {
    "url": "https://github.com/igorzheludkov/react-native-ai-debugger/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "build"
  ],
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "fast-xml-parser": "^5.3.3",
    "node-easyocr": "^1.0.9",
    "sharp": "^0.34.5",
    "tesseract.js": "^7.0.0",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.11",
    "typescript": "^5.9.3"
  }
}
